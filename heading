#include <stdio.h>

int main() {
FILE *fptr;
    char filename[] = "sample.txt";
     char text[100];
 fptr = fopen(filename, "w");
 if (fptr == NULL) {
        printf("Error opening file for writing.\n");
	 return 1;
    }
printf("Enter text to write to file: ");
    fgets(text, sizeof(text), stdin);
    fprintf(fptr, "%s", text);
    fclose(fptr);
     printf("Text written to %s successfully.\n", filename);

